// jss
let newCSS = document.createElement("style");
newCSS.textContent =
    `.newClass {
    background-color: yellow;
    font-weight: bold;
    color: black;
    }`;

document.head.append(newCSS);

let para = document.querySelector(".text1");

para.classList.add("newClass");
