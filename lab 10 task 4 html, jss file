//jss
function toggleBulb() {
    let bulb = document.getElementById("myBulb");
    let src = bulb.getAttribute("src");

    if (src ==="https://www.w3schools.com/js/pic_bulboff.gif") {
    bulb.setAttribute("src", "https://www.w3schools.com/js/pic_bulbon.gif");
    } else {
    bulb.setAttribute("src", "https://www.w3schools.com/js/pic_bulboff.gif");
    }
}
